                    android:textAlignment="center"
                    android:textColor="#000"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imgexit"
                    android:layout_width="108dp"
                    android:layout_height="108dp"
                    android:layout_marginTop="10dp"
